{% extends 'PhotoBundle::base.html.twig' %}

{% block content %}
    {% for post in posts %}
        <div class="post_block" style="width: 100%; border-bottom: 2px solid black">
            <div class="main_photo" style="float: left; width: 300px; min-height: 1px">
                {% if post.mainImage %}
                    <img src="{{ post.mainImage }}" alt="{{ post.title }}" width="200px">
                {% endif %}
            </div>
            <div class="description_post" style="float: left;">
                <h3>{{ post.description }}</h3>
            </div>
        </div>
        <div class="clear"></div>
    {% endfor %}
{% endblock %}